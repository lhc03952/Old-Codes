#include<iostream>
#include<cmath>
#include<cstdio>
#include<cstdlib>

typedef long long int lg;

int main()
{
  lg a[1001],test,sm,n,i,x;

  scanf("%lld",&test);

  while(test--)
   {
    scanf("%lld",&n);
    sm=0;
   for(i=0;i<n;i++)
   { scanf("%lld",&a[i]);
     sm+=a[i];
   }

    x=pow(2,n-1)-1;

  printf("%lld\n",x*sm);
  }

return 0;
}

